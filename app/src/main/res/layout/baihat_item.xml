<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#333">
        <TextView
            android:id="@+id/tvMusicListIndex"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:textColor="#F0F0F0"
            android:text="1"
            android:textSize="15sp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvMusicListIndex"
            >
            <ImageView
                android:id="@+id/imageViewtop"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvTenBaiHatMusicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/cvImage"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:text="Ten Ca Khúc"
            android:textColor="#F0F0F0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvTenCaSiMusicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvImage"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-32dp"
            android:layout_toRightOf="@+id/cvImage"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ca sĩ"
            android:textColor="#979797"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>