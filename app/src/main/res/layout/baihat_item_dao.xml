<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <!--        <ImageView-->
        <!--            android:id="@+id/imageViewLuotThichBaiHat"-->
        <!--            android:layout_width="20dp"-->
        <!--            android:layout_height="20dp"-->
        <!--            android:src="@drawable/ic_white_love"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginRight="5dp"/>-->
        <TextView
            android:id="@+id/tvMusicListIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp" />
        <ImageView
            android:id="@+id/imageViewtop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/tvMusicListIndex"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tvTenBaiHatMusicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewtop"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:text="Ten Ca Khúc"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTenCaSiMusicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewtop"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="-32dp"
            android:layout_toRightOf="@+id/imageViewtop"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ca sĩ"
            android:textColor="#979797"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnThembaihat"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_toRightOf="@+id/imageViewtop"
            android:layout_marginTop="40dp"
            android:src="@drawable/plus"
            android:scaleType="fitXY"
            android:text="T"></ImageButton>

        <ImageButton
            android:id="@+id/btnSuabaihat"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_toRightOf="@+id/imageViewtop"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/pen"
            android:text="S"></ImageButton>

        <ImageButton
            android:id="@+id/btnXoabaihat"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="230dp"
            android:layout_toRightOf="@+id/imageViewtop"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/remove"
            android:text="X"></ImageButton>


    </RelativeLayout>
</androidx.cardview.widget.CardView>